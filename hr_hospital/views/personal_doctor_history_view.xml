<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hosp_personal_doctor_history_tree" model="ir.ui.view">
        <field name="name">hr.hosp.personal_doctor_history.tree ()</field>
        <field name="model">hr.hosp.personal_doctor_history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="doctor"/>
                <field name="appointment_date"/>
            </tree>
        </field>
    </record>

    <record id="hr_hosp_personal_doctor_history_act_window" model="ir.actions.act_window">
        <field name="name">Історія сімейного лікаря</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hosp.personal_doctor_history</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="hr_hosp_personal_doctor_history_menu"
              action="hr_hosp_personal_doctor_history_act_window"
              parent="hr_hosp_for_registry_menu"
              name="Історія сімейного лікаря" sequence="400"/>
</odoo>
