<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hosp_patient_tree" model="ir.ui.view">
        <field name="name">hr.hosp.patient.tree ()</field>
        <field name="model">hr.hosp.patient</field>
        <field name="arch" type="xml">
            <tree>
                <header>
                    <button type="object" name="hr_hosp_change_personal_doctor_multi_wizard_act_window" string="Змінити персонального лікаря"/>
                </header>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="sex"/>
                <field name="birthday"/>
                <field name="age"/>
                <field name="passport"/>
                <field name="contact_person_id" widget="many2one_tags"/>
                <field name="person_doctor_id" widget="many2one_tags"/>
            </tree>
        </field>
    </record>

    <record id="hr_hosp_patient_form" model="ir.ui.view">
        <field name="name">hr.hosp.patient.form ()</field>
        <field name="model">hr.hosp.patient</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="photo" widget="image"/>
                        <field name="sex"/>
                        <field name="birthday"/>
                        <field name="age"/>
                        <field name="passport"/>
                        <field name="contact_person_id" widget="many2one_tags"/>
                        <field name="person_doctor_id" widget="many2one_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hosp_patient_act_window" model="ir.actions.act_window">
        <field name="name">Пацієнт</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hosp.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hosp_patient_menu"
              action="hr_hosp_patient_act_window"
              parent="hr_hosp_for_registry_menu"
              name="Пацієнт" sequence="200"/>

</odoo>
