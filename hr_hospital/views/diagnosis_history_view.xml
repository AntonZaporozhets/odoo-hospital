<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hosp_diagnosis_history_tree" model="ir.ui.view">
        <field name="name">hr.hosp.diagnosis_history.tree ()</field>
        <field name="model">hr.hosp.diagnosis_history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="doctor"/>
                <field name="diagnosis"/>
                <field name="disease"/>
                <field name="confirmation_date"/>
                <field name="withdrawal_date"/>
            </tree>
        </field>
    </record>

    <record id="hr_hosp_diagnosis_history_pivot" model="ir.ui.view">
        <field name="name">hr.hosp.diagnosis_history.pivot ()</field>
        <field name="model">hr.hosp.diagnosis_history</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="create_date" interval="month"/>
                <field name="disease" type="row"/>
                <field name="diagnosis" type="row"/>
<!--                <field name="doctor" type="row"/>-->
<!--                <field name="patient_id" type="row"/>-->
<!--                <field name="confirmation_date" type="row"/>-->
                <field name="confirmation_date" type="col"/>
            </pivot>
        </field>
    </record>

    <record id="hr_hosp_diagnosis_history_graph" model="ir.ui.view">
        <field name="name">hr.hosp.diagnosis_history.graph ()</field>
        <field name="model">hr.hosp.diagnosis_history</field>
        <field name="arch" type="xml">
            <graph type="bar" stacked="0">
                <field name="confirmation_date" interval="month"/>
                <field name="diagnosis"/>
            </graph>
        </field>
    </record>


    <record id="hr_hosp_diagnosis_history_act_window" model="ir.actions.act_window">
        <field name="name">Історія діагнозів</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hosp.diagnosis_history</field>
        <field name="view_mode">tree,pivot,graph</field>
    </record>

    <menuitem id="hr_hosp_diagnosis_history_menu"
              action="hr_hosp_diagnosis_history_act_window"
              parent="hr_hosp_for_doctor_menu"
              name="Історія діагнозів" sequence="200"/>
</odoo>
