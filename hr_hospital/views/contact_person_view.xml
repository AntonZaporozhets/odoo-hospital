<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hosp_contact_person_tree" model="ir.ui.view">
        <field name="name">hr.hosp.contact_person.tree ()</field>
        <field name="model">hr.hosp.contact_person</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="sex"/>
            </tree>
        </field>
    </record>

    <record id="hr_hosp_contact_person_form" model="ir.ui.view">
        <field name="name">hr.hosp.contact_person.form ()</field>
        <field name="model">hr.hosp.contact_person</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="photo" widget="image"/>
                        <field name="sex"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hosp_contact_person_act_window" model="ir.actions.act_window">
        <field name="name">Контактна особа</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hosp.contact_person</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hosp_contact_person_menu"
              action="hr_hosp_contact_person_act_window"
              parent="hr_hosp_for_registry_menu"
              name="Контактна особа" sequence="300"/>
</odoo>
