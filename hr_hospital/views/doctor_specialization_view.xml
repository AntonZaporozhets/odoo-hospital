<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hosp_doctor_specialization_tree" model="ir.ui.view">
        <field name="name">hr.hosp.doctor_specialization.tree ()</field>
        <field name="model">hr.hosp.doctor_specialization</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="hr_hosp_doctor_specialization_form" model="ir.ui.view">
        <field name="name">hr.hosp.doctor_specialization.form ()</field>
        <field name="model">hr.hosp.doctor_specialization</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hosp_doctor_specialization_act_window" model="ir.actions.act_window">
        <field name="name">Спеціалізація лікаря</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hosp.doctor_specialization</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hosp_doctor_specialization_menu"
              action="hr_hosp_doctor_specialization_act_window"
              parent="hr_hosp_for_admin_menu"
              name="Спеціалізація лікаря" sequence="200"/>
</odoo>
