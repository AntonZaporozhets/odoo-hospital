<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hosp_change_personal_doctor_multi_wizard_form" model="ir.ui.view">
        <field name="name">hr.hosp.change_personal_doctor_multi_wizard.form ()</field>
        <field name="model">hr.hosp.change_personal_doctor_multi_wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="patient_ids" widget="many2many_tags"/>
                    <field name="doctor_id" widget="many2one_tags"/>
                </group>
                <footer>
                    <button name="action_set" string="Створити" type="object" icon="fa-plus" class="btn-primary"/>
                    <button special="cancel" string="Закрити" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="hr_hosp_change_personal_doctor_multi_wizard_act_window" model="ir.actions.act_window">
        <field name="name">Зміна персонального лікаря</field>
        <field name="res_model">hr.hosp.change_personal_doctor_multi_wizard</field>
        <field name="view_id" ref="hr_hosp_change_personal_doctor_multi_wizard_form"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
